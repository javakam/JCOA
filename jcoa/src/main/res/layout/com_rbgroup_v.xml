<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relaStartTime"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/padding_lsmall_10"
        android:paddingLeft="@dimen/padding_small_15"
        android:paddingRight="@dimen/padding_small_15"
        android:paddingTop="@dimen/padding_lsmall_10">

        <TextView
            android:id="@+id/tvChooseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="开始时间"
            android:textColor="@color/black_half"
            android:textSize="@dimen/text_size_normal_16" />

        <TextView
            android:id="@+id/tvStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/black_half"
            android:textSize="@dimen/text_size_normal_16"
            tools:text="2017年5月25日" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relaEndTime"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/margin_one_1"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/padding_lsmall_10"
        android:paddingLeft="@dimen/padding_small_15"
        android:paddingRight="@dimen/padding_small_15"
        android:paddingTop="@dimen/padding_lsmall_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="结束时间"
            android:textColor="@color/black_half"
            android:textSize="@dimen/text_size_normal_16" />

        <TextView
            android:id="@+id/tvEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:maxLines="1"
            tools:text="2017年5月25日"
            android:textColor="@color/black_half"
            android:textSize="@dimen/text_size_normal_16" />

    </RelativeLayout>

    <!--负责人工作动态汇总-->
    <ImageView
        android:id="@+id/imgJobSummary"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="@dimen/margin_llsmall_5"
        android:gravity="center"
        android:src="@mipmap/all_type"
        android:visibility="gone" />

</LinearLayout>