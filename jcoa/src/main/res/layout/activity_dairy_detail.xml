<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayBg"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.vitek.jcoa.ui.activity.DairyDetailActivity">

    <include layout="@layout/com_title_view_little" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding_lsmall_10">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工作状态"
            android:textColor="@color/black_half"
            android:textSize="@dimen/text_size_normal_16" />

        <View
            android:layout_width="@dimen/one"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_lsmall_10"
            android:background="@color/bgColor"
            android:paddingBottom="@dimen/padding_lllsmall_3"
            android:paddingTop="@dimen/padding_lllsmall_3" />

        <TextView
            android:id="@+id/tvState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_lsmall_10"
            android:textColor="@color/black_half"
            android:textSize="@dimen/text_size_normal_16"
            tools:text="单位办公" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_llsmall_5"
        android:background="@color/white"
        android:padding="@dimen/padding_lsmall_10"
        android:text="具体内容"

        android:textColor="@color/black_half"
        android:textSize="@dimen/text_size_normal_16" />

    <TextView
        android:id="@+id/tvDairyContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_one_1"
        android:background="@color/white"
        android:lineSpacingExtra="@dimen/padding_lllsmall_3"
        android:padding="@dimen/padding_lsmall_10"
        android:textColor="@color/black_half"
        android:textSize="@dimen/text_size_normal_16"
        tools:text="@string/text_long" />

    <Button
        android:id="@+id/btReturnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/margin_lbig_25"
        android:layout_marginRight="@dimen/margin_lbig_25"
        android:layout_marginTop="@dimen/margin_hbig_40"
        android:background="@drawable/selector_bt_login"
        android:gravity="center"
        android:text="退回"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_big_18"
        android:visibility="gone" />
</LinearLayout>
