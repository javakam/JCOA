<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearInnerLayout"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:padding="@dimen/padding_lsmall_10">

    <TextView
        android:id="@+id/tvZGRS"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="在岗人数 "
        android:textColor="@color/black_half"
        android:textSize="@dimen/text_size_normal_16" />

    <TextView
        android:id="@+id/tvYDRS"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="应到人数 "
        android:textColor="@color/black_half"
        android:textSize="@dimen/text_size_normal_16" />

    <TextView
        android:id="@+id/tvDWBG"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="单位办公 "
        android:textColor="@color/black_half"
        android:textSize="@dimen/text_size_normal_16" />

    <TextView
        android:id="@+id/tvQT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="其他 "
        android:textColor="@color/black_half"
        android:textSize="@dimen/text_size_normal_16" />

</LinearLayout>