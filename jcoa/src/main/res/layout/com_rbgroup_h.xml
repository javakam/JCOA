<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearState"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/padding_lsmall_10">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="工作状态"
        android:textColor="@color/black_half"
        android:textSize="@dimen/text_size_normal_16" />

    <RadioGroup
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbAll"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_lsmall_10"

            android:background="@drawable/selector_rb_wkstate_check"
            android:button="@null"
            android:gravity="center"
            android:padding="@dimen/padding_llsmall_5"
            android:text="全部"

            android:textColor="@color/color_rb_text"
            android:textSize="@dimen/text_size_small_14" />

        <RadioButton
            android:id="@+id/rbPost"

            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_lsmall_10"
            android:background="@drawable/selector_rb_wkstate_check"
            android:button="@null"
            android:gravity="center"
            android:padding="@dimen/padding_llsmall_5"

            android:text="在岗"
            android:textColor="@color/color_rb_text"
            android:textSize="@dimen/text_size_small_14" />

        <RadioButton
            android:id="@+id/rbNoPost"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_lsmall_10"
            android:background="@drawable/selector_rb_wkstate_check"
            android:button="@null"

            android:gravity="center"
            android:padding="@dimen/padding_llsmall_5"
            android:text="不在岗"
            android:textColor="@color/color_rb_text"
            android:textSize="@dimen/text_size_small_14" />

    </RadioGroup>
    <!--负责人工作动态汇总-->
    <ImageView
        android:id="@+id/imgJobSummary"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="@dimen/margin_llsmall_5"
        android:gravity="center"
        android:src="@mipmap/all_type"
        android:visibility="gone" />

</LinearLayout>